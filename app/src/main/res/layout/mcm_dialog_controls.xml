<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/mcm_gutter"
    tools:theme="@style/Theme.Coins.Flat.Dialog">

    <Button
        android:id="@+id/dialog_cancel"
        style="?attr/errorButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:minEms="4"
        android:text="/dialog_cancel" />

    <Button
        android:id="@+id/dialog_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="/dialog_other"
        android:minEms="4"
        android:visibility="gone"
        tools:visibility="visible" />

    <Button
        android:id="@+id/dialog_ok"
        style="?attr/successButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:minEms="4"
        android:text="/dialog_ok" />

</RelativeLayout>